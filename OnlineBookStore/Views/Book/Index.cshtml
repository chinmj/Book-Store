@model IEnumerable<OnlineBookStore.Models.Book>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Online Book Portal</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />    
</head>
<body>

    <section id="book">
        <div class="container my-3 py-5 text-center w-auto h-auto">
            <div class="row mb-5">
                <div class="col">
                    <h1>Book Store</h1>
                    <p class="mt-3">This is an online book store where you can get books from all the categories!</p>                    
                </div>
            </div>
            <div class="row">               

                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="card mt-4 mb-4">
                            <div class="card-body">
                                <img src="~/Content/images/@(item.Name).PNG" alt="" class="img-fluid w-60 mb-2" />
                                <h5 class="card-title font-weight-bold flex-wrap">@Html.DisplayFor(modelItem => item.Name)</h5>
                                @Html.ActionLink("Show Details", "Details","Book", new { bookId = item.BookId },null)                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>
</body>
</html>

